<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <ImageView
        android:id="@+id/row_weather_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/row_weather_temperature"
        android:layout_toRightOf="@+id/row_weather_icon"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/row_city_name"
            android:text="Киев"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="Roboto Regular"/>

        <TextView
            android:id="@+id/row_weather_description"
            android:text="Пасмурно"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="Roboto Regular"/>
    </LinearLayout>

    <TextView
        android:id="@+id/row_weather_temperature"
        android:text="+31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="Roboto Regular"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>